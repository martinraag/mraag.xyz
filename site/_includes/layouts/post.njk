{% extends 'layouts/base.njk' %}

{% block body %}

  <div class="flex items-center h-16 xl:px-40 md:px-16 px-4 text-gray-800">
    <a href="/" class="font-extrabold text-4xl">mraag<span class="text-pink-400">.xyz</span></h1>
    <div class="flex flex-row-reverse flex-grow">
      <a href="{{ social.instagram }}" class="px-2">
        {{ '/site/_includes/svg/instagram.svg' | svgContents | safe }}
      </a>
      <a href="{{ social.twitter }}" class="px-2">
        {{ '/site/_includes/svg/twitter.svg' | svgContents | safe }}
      </a>
      <a href="{{ social.linkedin }}" class="px-2">
        {{ '/site/_includes/svg/linkedin.svg' | svgContents | safe }}
      </a>
      <a href="{{ social.github }}" class="px-2">
        {{ '/site/_includes/svg/github.svg' | svgContents | safe }}
      </a>
      <a href="#" class="px-2">
        {{ '/site/_includes/svg/rss.svg' | svgContents | safe }}
      </a>
    </div>
  </div>

  <hr/>

  <div class="container mx-auto lg:px-64 md:px-16 px-4 py-6">
    <h1 class="font-serif text-4xl text-gray-900">{{ title | safe }}</h1>
    <p class="font-serif text-lg text-gray-700">{{ date | date }}</p>
    <div class="mr-post font-serif text-lg text-gray-900 leading-relaxed mt-3">
      {{ content | safe }}
    </div>

  <div class="flex justify-center font-mono border border-solid border-pink-400 mt-6 p-6">
    <img class="h-32 mr-6" src="/images/illustration-og.png" />
    <p>This post was written by <a href="#" class="text-pink-400">Martin Raag</a>, who is a<br/>
      ⌨️ software developer,<br/>
      📷 hobby photographer,<br/>
      🏃‍♂️ avid runner,<br/>
      👨🏼‍💻 and available for hire.
    </p>
  <div>

  </div>

{% endblock %}