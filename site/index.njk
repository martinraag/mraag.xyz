{% extends 'layouts/page.njk' %}

{% set route = "index" %}
{% set header = "Recent posts" %}

{% block content %}
  {%- for post in collections.post | reverse -%}
    <div class="py-4 md:px-12 px-5">
      <a href="{{ post.url }}" class="font-serif text-2xl text-gray-900 hover:text-pink-400">
        {{ post.data.title }}
      </a>
      <p class="font-serif text-gray-700 mt-1">{{ post.date | date }}</p>
      <p class="font-serif text-gray-900 mt-1">
        {{ post.templateContent | firstParagraph | striptags }}
      </p>
      <div class="mt-2 mb-2">
        <a href="{{ post.url }}" class="font-serif text-pink-500 hover:underline">Read more</a>
      </div>
      <hr/>
    </div>
  {%- endfor -%}
{% endblock %}